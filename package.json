{
  "name": "@kyvg/vue3-notification",
  "description": "Vue.js Notification Library",
  "version": "2.3.3",
  "author": "kyvg",
  "private": false,
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "build": "rm -rf dist/ && rollup -c",
    "release": "npm run build && npm run build:dts",
    "build:demo": "vite build",
    "build:dts": "api-extractor run --local --verbose && tail -n +3 src/globalExtensions.ts >> dist/index.d.ts",
    "dev": "vite serve",
    "unit": "jest",
    "unit:watch": "jest --watch",
    "test": "npm run unit",
    "lint": "eslint ./src/index.ts",
    "preversion": "npm run test && npm run release && git add -A dist"
  },
  "types": "dist/index.d.ts",
  "main": "dist/index.common.js",
  "module": "dist/index.esm.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/kyvg/vue3-notification.git"
  },
  "bugs": {
    "url": "https://github.com/kyvg/vue3-notification/issues"
  },
  "license": "MIT",
  "peerDependencies": {
    "vue": "^3.0.11"
  },
  "keywords": [
    "web",
    "front-end",
    "vue",
    "vuejs",
    "vue3",
    "notification",
    "vue-notification",
    "vue-notifications"
  ],
  "devDependencies": {
    "@babel/core": "^7.13.15",
    "@babel/preset-env": "^7.13.15",
    "@microsoft/api-extractor": "^7.13.5",
    "@rollup/plugin-commonjs": "^18.0.0",
    "@rollup/plugin-node-resolve": "^11.2.1",
    "@rollup/plugin-typescript": "^8.2.1",
    "@types/jest": "^26.0.22",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "@vitejs/plugin-vue": "^1.2.1",
    "@vue/compiler-sfc": "^3.0.11",
    "@vue/server-renderer": "^3.0.11",
    "@vue/test-utils": "^2.0.0-rc.4",
    "eslint": "^7.23.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-standard": "^5.0.0",
    "eslint-plugin-vue": "^7.8.0",
    "jest": "^26.6.3",
    "mitt": "^2.1.0",
    "postcss": "^8.2.10",
    "rollup": "^2.45.2",
    "rollup-plugin-alias": "^2.2.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-typescript2": "^0.30.0",
    "rollup-plugin-vue": "^6.0.0",
    "sass": "^1.32.8",
    "ts-jest": "^26.5.5",
    "typescript": "^4.2.4",
    "velocity-animate": "^1.5.2",
    "vite": "^2.1.5",
    "vue": "^3.0.11",
    "vue-jest": "^5.0.0-alpha.7"
  }
}
