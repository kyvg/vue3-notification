{
  "name": "@kyvg/vue3-notification",
  "description": "Vue.js Notification Library",
  "version": "2.3.6",
  "author": "kyvg",
  "private": false,
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "vetur": {
    "tags": "vetur/tags.json",
    "attributes": "vetur/attributes.json"
  },
  "scripts": {
    "build": "rm -rf dist/ && rollup -c",
    "release": "npm run build && npm run build:dts",
    "build:demo": "vite build",
    "build:dts": "api-extractor run --local --verbose && tail -n +3 src/globalExtensions.ts >> dist/index.d.ts",
    "dev": "vite serve",
    "unit": "jest",
    "unit:watch": "jest --watch",
    "test": "npm run unit",
    "lint": "eslint ./src/index.ts",
    "preversion": "npm run test && npm run release && git add -A dist"
  },
  "types": "dist/index.d.ts",
  "main": "dist/index.common.js",
  "module": "dist/index.esm.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/kyvg/vue3-notification.git"
  },
  "bugs": {
    "url": "https://github.com/kyvg/vue3-notification/issues"
  },
  "license": "MIT",
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "keywords": [
    "web",
    "front-end",
    "vue",
    "vuejs",
    "vue3",
    "notification",
    "vue-notification",
    "vue-notifications"
  ],
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/preset-env": "^7.15.4",
    "@microsoft/api-extractor": "^7.18.7",
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@rollup/plugin-typescript": "^8.2.5",
    "@types/jest": "^26.0.22",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "@vitejs/plugin-vue": "^1.6.2",
    "@vue/compiler-sfc": "~3.0.0",
    "@vue/server-renderer": "~3.0.0",
    "@vue/test-utils": "^2.0.0-rc.4",
    "esbuild": "^0.14.25",
    "eslint": "^7.32.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-standard": "^5.0.0",
    "eslint-plugin-vue": "^7.17.0",
    "jest": "^26.6.3",
    "mitt": "^3.0.0",
    "postcss": "^8.3.6",
    "rollup": "^2.56.3",
    "rollup-plugin-alias": "^2.2.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.1",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-typescript2": "^0.30.0",
    "rollup-plugin-vue": "^6.0.0",
    "sass": "^1.39.0",
    "ts-jest": "^26.5.5",
    "typescript": "^4.4.2",
    "velocity-animate": "^1.5.2",
    "vite": "^2.5.6",
    "vue": "~3.0.0",
    "vue-jest": "^5.0.0-alpha.10"
  }
}
